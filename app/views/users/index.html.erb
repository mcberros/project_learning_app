<div class="row-fluid">
  <div class="span12">
    <% if @users.any? %>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Email</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.email, user %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No users found.</div>
    <% end %>
    <div>
      <%= link_to 'New User', new_user_path %>
    </div>
  </div>
</div>

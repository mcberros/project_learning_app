<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :remember_me, as: :boolean, input_html: { checked: true } %>
  <%= f.button :submit %>
<% end %>


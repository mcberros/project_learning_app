<div id="profile">
  <%= user.avatar %>
  <h1><%= user.full_name %></h1>
  <dl>
    <dt>Username:</dt>
    <dd><%= @user.email %></dd>
    <dt>Member Since:</dt>
    <dd><%= user.member_since %></dd>
    <dt>Website:</dt>
    <dd><%= user.website %></dd>
    <dt>Twitter:</dt>
    <dd><%= user.twitter_name %></dd>
    <dt>Bio:</dt>
    <dd><%= user.bio %></dd>
  </dl>
</div>

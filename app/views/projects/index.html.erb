<div class="row-fluid">
  <div class="span12">
    <% if @projects.any? %>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No projects found.</div>
    <% end %>
    <div>
      <%= link_to 'New Project', new_project_path %>
    </div>
  </div>
</div>

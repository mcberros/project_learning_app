<div class="row-fluid">
  <div class="span12">
    <% if @stories.any? %>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @stories.each do |story| %>
        <tr>
          <td><%= link_to story.name, story %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No stories found.</div>
    <% end %>
    <div>
      <%= link_to 'New Story', new_story_path %>
    </div>
  </div>
</div>

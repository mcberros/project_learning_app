<div class="row-fluid">
  <div class="span12">
    <% if @surveys.any? %>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @surveys.each do |survey| %>
        <tr>
          <td><%= link_to survey.name, survey %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No surveys found.</div>
    <% end %>
    <div>
      <%= link_to 'New Survey', new_survey_path %>
    </div>
  </div>
</div>

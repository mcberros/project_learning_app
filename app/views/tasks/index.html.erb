<div class="row-fluid">
  <div class="span12">
    <% if @tasks.any? %>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, task %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="alert alert-info">No tasks found.</div>
    <% end %>
    <div>
      <%= link_to 'New Task', new_task_path %>
    </div>
  </div>
</div>
